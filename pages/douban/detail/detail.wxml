<block wx:if="{{showLoading}}">
  <view class="page-loading">
    <text class="weui-loading" />
    <text class="loading-text">玩命加载中</text>
  </view>
</block>
<block wx:else>
  
  <view class="container film-detail">
    <view class="film-item_2">
      <view class="film-image_2">
        <image src="{{film.pic}}"></image>
      </view>
      <view class="film-info">
        <!-- <view>
          <text class="film-title">{{film.title}}</text>  
          <text class="film-label">{{film.title}}</text>          
          <text class="film-year">{{film.year}}</text>
        </view> -->
        <view class="film-rating">
            <!-- <text class="label">商品：</text> -->
            <text class="rating">{{film.title}}</text>
        </view>
        
        <view class="directors">
          <text class="label">在售价：</text>
          <wxs module="m1">
            var toFixed1 = function(value, number) {
              return value.toFixed(number);
            }
            module.exports.toFixed1 = toFixed1;
          </wxs>
          <text class="label">{{m1.toFixed1(film.price - 0, 2)}}</text>
          <!-- <block wx:for-items="{{film.directors}}" wx:for-item="director">
            <text class="person">{{director.name}}</text>
          </block> -->
        </view>
        <view class="casts">
          <block wx:if="{{flim.quanValue > 0}}">
            <text class="label">券后价：</text>
            <text class="label">{{m1.toFixed1(film.price - film.quanValue, 2)}}</text>
          </block>
          <block wx:else>
              <text class="label">优惠券：</text>
              <text class="label">无</text>
            </block>
          <!-- <block wx:for-items="{{film.casts}}" wx:for-item="cast">
            <text class="person">{{cast.name}}</text>
          </block> -->
        </view>
        <view class="casts">
          <text class="label">高佣金：</text>
          <text class="label" style="color: red">{{m1.toFixed1(film.rate * 0.7, 2)}}%</text>
          <text class="label"> (预计￥{{m1.toFixed1(film.rate /100 * 0.7 * (film.price - film.quanValue), 2)}})</text>
          <!-- <block wx:for-items="{{film.casts}}" wx:for-item="cast">
            <text class="person">{{cast.name}}</text>
          </block> -->
        </view>
        <view class="casts">
          <text class="label">淘口令：</text>
          <text class="label">{{film.tkl}}</text>
          <!-- <block wx:for-items="{{film.casts}}" wx:for-item="cast">
            <text class="person">{{cast.name}}</text>
          </block> -->
        </view>
      </view>
    </view>
    <view class="tblin_items_btn copy-view" bindtap="copyTBL">一键复制</view>
    <!-- <block wx:if="{{flim.Introduce}}">
      <view class="summary">
        <text class="title">推荐</text>
        <view class="content">
          {{film.summary}}
        </view>
      </view>
    </block> -->
  </view>
</block>